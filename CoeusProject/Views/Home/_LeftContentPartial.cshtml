        $('#lnkMyArticles').click(function (e) {
            e.preventDefault();

            var kendoWaitWindow = kendoWait();
            var loaded = false;

            bindCenterPartial('@Url.Action("GetMainArtigos", "Artigo")', { idUsuario: idUsuarioLogado }, function () {
                if (loaded) {
                    kendoWaitWindow.close();
                }
                loaded = true;
            });

            bindLeftPartial('@Url.Action("GetLeftDivArtigos","Artigo")', { idUsuario: idUsuarioLogado }, function () {
                if (loaded) {
                    kendoWaitWindow.close();
                }
                loaded = true;
            });
        });

