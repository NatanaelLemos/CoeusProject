@{Layout = null;}

<div style="position: absolute; top: 20%; left: 10px; right: 0; text-align: left">
    @(Html.ActionLink("Meus Artigos", "*", "*", new { @id = "lnkMyArticles" }))
    <br /><br />
    @(Html.ActionLink("Meus Vídeos", "*", "*", new { @id = "lnkMyVideos" }))
    <br /><br />
    @(Html.ActionLink("Meus Seguidores", "*", "*", new { @id = "lnkMyFollowers" }))
    <br /><br />
